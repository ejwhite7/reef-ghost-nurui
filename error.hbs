<!DOCTYPE html>
<html lang="{{@site.lang}}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{@site.title}} â€” {{statusCode}}</title>
        <meta name="HandheldFriendly" content="True">
        <meta name="MobileOptimized" content="320">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {{>services/google_fonts}}
        <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}">
        {{ghost_head}}
    </head>
    <body class="{{#get "tags" limit="all" filter="visibility:internal"}}{{#foreach tags visibility="internal"}} global-{{slug}}{{/foreach}}{{/get}}">
        <div class="global-wrap">
            <div class="section-content-wrap">
                {{>header}}
                <div class="section-error flex">
                    <div class="error-wrap">
                        <h2>{{statusCode}}</h2>
                        <p>{{message}}</p>
                        <a href="{{@site.url}}" class="error-back-button global-button">{{t "Back to Homepage"}}</a>
                    </div>
                </div>
            </div>
            {{>footer}}
        </div>
        {{>search}}
        <script src="{{asset "js/global.js"}}"></script>
        {{ghost_foot}}
    </body>
</html>