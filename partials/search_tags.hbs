{{#get "tags" limit="20" filter="visibility:public" include="count.posts" order="count.posts desc" as |tags_cloud|}}
{{#if tags_cloud}}
<div class="search-suggestion-tags">
	{{#foreach tags separator=""}}
	{{#if @first}}
	<h3>{{t "May we suggest a tag?"}}</h3>
	<a class="post-tag global-tag" href="{{url}}">{{name}}</a>
	{{else}}
	<a class="post-tag global-tag" href="{{url}}">{{name}}</a>
	{{/if}}
	{{/foreach}}
</div>
{{/if}}
{{/get}}