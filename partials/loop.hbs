<div class="masonry-wrap">
	<div class="masonry">
		{{#foreach posts}}
		<div class="item {{post_class}}">
			<article class="appear">
				<div class="item-container{{#if @first}} first{{^if feature_image}} no-image{{/if}}{{/if}}{{#if @last}} last{{/if}}">
					{{#if feature_image}}
					<div class="item-container-img">
						<div class="appear-img">
							<a class="item-image" href="{{url}}">
								<img src="{{feature_image}}" alt="{{title}}">
							</a>
						</div>
					</div>
					{{/if}}
					<header class="item-title">
						<h2><a href="{{url}}">{{title}}</a></h2>
						{{^if custom_excerpt}}
						{{#if excerpt}}
						<div class="item-excerpt">
							<p>{{excerpt words="25"}} <a href="{{url}}">[...]</a></p>
						</div>
						{{/if}}
						{{else}}
						<div class="item-excerpt">
							<p>{{custom_excerpt}}</p>
						</div>
						{{/if}}
						<div class="item-meta author-name">
							{{authors}}
							<br>
							<time datetime="{{date format="YYYY-MM-DD"}}">{{t "Published"}} {{date published_at timeago="true"}}</time>
						</div>
					</header>
				</div>
			</article>
		</div>
		{{/foreach}}
	</div>
</div>