<header class="header-wrap">
	<div class="left">
		{{#if @site.logo}}
		<div class="logo">
			<a class="logo-image" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
		</div>
		{{else}}
		<div class="logo">
			<div class="logo-no-image"><a href="{{@site.url}}">{{@site.title}}</a></div>
		</div>
		{{/if}}
	</div>
	<div class="right">
		<nav class="nav-wrap">
			<label for="toggle" class="nav-wrap--label hamburger hamburger--minus">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</label>
			<input type="checkbox" id="toggle" class="nav-wrap--toggle">
			<ul class="nav-wrap--list">
				{{navigation}}
			</ul>
		</nav>
	</div>
</header>