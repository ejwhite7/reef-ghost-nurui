<footer class="section-footer">
	<div class="footer-wrap wrap flex">
		<div class="footer-logo flex">
			{{#if @site.logo}}
			<a class="is-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
			{{else}}
			<a class="no-logo" href="{{@site.url}}">{{@site.title}}</a>
			{{/if}}
		</div>
		<div class="footer-nav">
			<ul class="nav-list">
				{{#if @site.secondary_navigation}}
				{{navigation type="secondary"}}
				{{else}}
				{{navigation}}
				{{/if}}
			</ul>
		</div>
		<div class="footer-social-links flex">
			{{#if @site.facebook}}
			<a href="{{facebook_url}}" aria-label="link Facebook">{{>icons/social/facebook}}</a>
			{{/if}}
			{{#if @site.twitter}}
			<a href="{{twitter_url}}" aria-label="link Twitter">{{>icons/social/twitter}}</a>
			{{/if}}
			{{>footer_icons}}
		</div>
	</div>
	<div class="footer-copyright">
		&copy; {{date format="YYYY"}} <a href="{{@site.url}}">{{@site.title}}</a>. {{t "All Right Reserved"}}.
		{{{t "Published with {ghostlink}" ghostlink="<a href=\"https://ghost.org\">Ghost</a>"}}}.
	</div>
</footer>