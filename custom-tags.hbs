{{!< default}}
{{#get "tags" include="count.posts" order="count.posts desc"}}
<div class="top-wrap">
	<section class="title-wrap">
		<div class="top-social">
			{{>social_icons_default}}
			{{>social_icons}}
		</div>
		<div class="page-tags-header bg-top">
			<h1 class="title">{{t "Our top tags"}}</h1>
		</div>
	</section>
</div>
<div class="page-tags-wrap">
	{{#foreach tags to="3"}}
	<div class="page-tag-wrap top appear{{#if feature_image}} is-image{{else}} no-image{{/if}}">
		<a href="{{url}}" class="item-link-overlay"></a>
		{{#if feature_image}}
		<div class="page-tag-image" style="background-image: url({{feature_image}})"></div>
		{{/if}}
		<h2><a href="{{url}}">{{name}}</a></h2>
		{{#if description}}
		<p>{{description}}</p>
		{{/if}}
	</div>
	{{/foreach}}
	{{#foreach tags from="4"}}
	{{#if @first}}
	<div class="page-tags-margin">
	</div>
	{{/if}}
	<div class="page-tag-wrap other{{#if feature_image}} is-image{{else}} no-image{{/if}}">
		<a href="{{url}}" class="item-link-overlay"></a>
		{{#if feature_image}}
		<div class="page-tag-image" style="background-image: url({{feature_image}})"></div>
		{{/if}}
		<h2><a href="{{url}}">{{name}}</a></h2>
	</div>
	{{/foreach}}
</div>
{{/get}}